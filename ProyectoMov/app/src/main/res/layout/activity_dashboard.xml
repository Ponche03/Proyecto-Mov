<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".LogIn">





    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icono_menu"
        app:layout_constraintBottom_toTopOf="@+id/title2"
        app:layout_constraintEnd_toStartOf="@+id/profile_picture"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <!-- Menú flotante (oculto por defecto) -->
    <LinearLayout
        android:id="@+id/menu_options_main"
        android:layout_width="130dp"
        android:paddingVertical="4dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/app_icon"
        app:layout_constraintStart_toStartOf="@+id/app_icon"
        app:layout_constraintEnd_toEndOf="@+id/app_icon">

        <!-- Botones del menú -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ver_registros"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_medium"
            android:text="Filtrar Registros"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_medium"
            android:text="Reportes"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>



    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/david_lynch"
        app:layout_constraintBottom_toTopOf="@+id/title2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:shapeAppearanceOverlay="@style/CircleImageView" />

    <!-- Menú flotante de Perfil de Usuario (oculto por defecto) -->
    <LinearLayout
        android:id="@+id/menu_options_pfp"
        android:layout_width="130dp"
        android:paddingVertical="4dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture"
        app:layout_constraintStart_toStartOf="@+id/profile_picture"
        app:layout_constraintEnd_toEndOf="@+id/profile_picture">

        <!-- Botones del menú -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_editar_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_medium"
            android:text="Editar Perfil"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logOut"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_medium"
            android:text="Salir"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>








    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/dashboard_gasto_total"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/light_grey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/dashboard_legend"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/light_grey"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/login_card"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:padding="24dp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-314dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-45dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="324dp"
        android:layout_height="111dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_card"
        tools:ignore="MissingConstraints">

        <!-- Fecha -->
        <TextView
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:paddingBottom="4dp"
            android:text="@string/dashboard_detalle_fecha"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tarjeta -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardGasto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fecha">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Icono -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Icono"
                    android:src="@drawable/icono_gasto" />

                <!-- Nombre del gasto -->
                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="8dp"
                    android:text="@string/dashboard_detalle_nombre"
                    android:textSize="16sp" />

                <!-- Cantidad -->
                <TextView
                    android:id="@+id/monto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/dashboard_detalle_cantidad"
                    android:textSize="16sp"
                    android:paddingEnd="10dp"/>

                <!-- Icono de documento -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Documento"
                    android:paddingStart="8dp"
                    android:src="@drawable/icono_documento"
                    android:paddingEnd="2dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>






    <!-- Menú flotante (oculto por defecto) -->
    <LinearLayout
        android:id="@+id/menu_options"
        android:layout_width="130dp"
        android:paddingVertical="4dp"
        android:elevation="8dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/fab_main"
        app:layout_constraintEnd_toEndOf="@+id/fab_main"
        app:layout_constraintStart_toStartOf="@+id/fab_main">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_medium"
            android:text="Registrar Gasto"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_medium"
            android:text="Registrar Ingreso"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Botón flotante principal -->
    <ImageButton
        android:id="@+id/fab_main"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/circle_button"
        android:contentDescription="Add"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#171716" />



</androidx.constraintlayout.widget.ConstraintLayout>
